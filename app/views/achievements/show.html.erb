
<div class="container" id="achievement-information">
  <% if @achievement.user_id == current_user.id%>
    <span><h4>Hi <%= current_user.name %>!, If you want to delete your achievement, click here</h4>
      <form action="/api/achievements" method="DELETE">
        <button type="button" id="delete-achievement" class="btn glyphicon glyphicon-remove">Delete</button>
      </form>
    </span>
  <% end %>

  </form>
	<table class="table table-user-information">
		<h3>Achievement information:</h3>
    <tbody>
      <tr>
        <td>Name:</td>
        <td><strong><%= @achievement.title %></strong></td>
      </tr>
      <tr>
        <td>Description:</td>
        <td><%= @achievement.description %></td>
      </tr>
      <tr>
        <td>Author:</td>
        <td><a href="/users/<%= @author_link %>"><%= @author %></a></td>
      </tr>
      <tr>
        <td>More information:</td>
        <td><a href="<%= @achievement.link %>"><%= @achievement.link %></a></td>
      </tr>
			 <tr>
        <td>Picture:</td>
        <td><img width="400px" height="auto" src="<%= @achievement.image %>"></td>
      </tr>
      <tr>
        <td>Category:</td>
        <td><%= @achievement.category %></td>
      </tr>
      <tr>
        <td>Date:</td>
        <td><%= @achievement.date %></td>
      </tr>
      <tr>
        <td>Comments:</td>
        <td>Thanks for your advice, I will take car of it! --<a href="">@paco</a></td>
      </tr>
   </tbody>
	</table> 

	<form  class="form-horizontal">
	  <h3><%= current_user.name %>, you can leave your comments here:</h3>
	  <div class="form-group">
	    <label for="inputComment" class="col-sm-2 control-label">Comment</label>
	    <div class="col-sm-10">
	      <textarea class="form-control" rows="3" id="text-description" placeholder="Write here your comment"></textarea>
	    </div>
	  </div>

	  <div class="form-group">
	    <div class="col-sm-offset-11 col-sm-12">
	      <button type="submit" class="btn btn-primary">Comment</button>
	    </div>
	  </div>
	</form>

</div>
